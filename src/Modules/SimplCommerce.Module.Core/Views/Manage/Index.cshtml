@model IndexViewModel
@{
    ViewData["Title"] = "Manage your account";
}
@if (ViewData["StatusMessage"] != null)
{
    <p class="text-success">@ViewData["StatusMessage"]</p>
}
<div class="row">
    <div class="col-md-3">
        @Html.Partial("_AccountMenu")
    </div>
    <div class="col-md-9">
        <h2>@Localizer["Account Dashboard"]</h2>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">@Localizer["Account Information"]</div>
                    <div class="panel-body">
                        @Model.FullName <br/>
                        @Model.Email
                        <p class="text-right">
                            <a href="~/user/info">@Localizer["Edit"]</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">@Localizer["Security"]</div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>@Localizer["Password"]:</dt>
                            <dd>
                                @if (Model.HasPassword)
                                {
                                    <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">@Localizer["Change"]</a>
                                }
                                else
                                {
                                    <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">@Localizer["Create"]</a>
                                }
                            </dd>
                            <dt>@Localizer["External Logins"]:</dt>
                            <dd>
                                @Model.Logins.Count <a asp-controller="Manage" asp-action="ManageLogins" class="btn-bracketed">@Localizer["Manage"]</a>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">@Localizer["Default shipping address"]</div>
                    <div class="panel-body">
                        <vc:default-address></vc:default-address>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

